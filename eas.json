{
  "cli": {
    "version": ">= 16.1.0",
    "appVersionSource": "remote"
  },
  "build": {
    "uat": {
      "environment": "preview",
      "channel": "uat",
      "distribution": "internal",
      "android": { "buildType": "apk", "autoIncrement": true },
      "ios": { "autoIncrement": true }
    },
    "production": {
      "environment": "production",
      "channel": "production",
      "android": { "buildType": "app-bundle", "autoIncrement": true },
      "ios": { "autoIncrement": true }
    }
  }
}
