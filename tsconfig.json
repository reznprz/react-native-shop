{
  "compilerOptions": {
    "target": "Esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["nativewind/types"],
    "baseUrl": ".", // This sets the root directory for absolute imports
    "paths": {
      "app/*": ["app/*"], // Maps "app/" to your "app" directory
      "*": ["node_modules/*"] // Default node_modules resolution
    }
  },
  "include": ["app", "env.d.ts", "shajhya.jpg"], // Ensures TypeScript includes the "app" directory
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
